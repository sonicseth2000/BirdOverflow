<h1>Listing hackers</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Username</th>
      <th>Password</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Score</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hackers.each do |hacker| %>
      <tr>
      	<td><%= hacker.id %></td>
        <td><%= hacker.username %></td>
        <td><%= hacker.password %></td>
        <td><%= hacker.first_name %></td>
        <td><%= hacker.last_name %></td>
        <td><%= hacker.score %></td>
        <td><%= hacker.type %></td>
        <td><%= link_to 'Show', hacker %></td>
        <td><%= link_to 'Edit', edit_hacker_path(hacker) %></td>
        <td><%= link_to 'Destroy', hacker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

