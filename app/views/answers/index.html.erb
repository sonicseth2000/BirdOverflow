<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Q response</th>
      <th>Creator</th>
      <th>Response score</th>
      <th>Content</th>
      <th>Timestamp</th>
      <th colspan="3%"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
      	<td><%= answer.id %></td>
        <td><%= answer.q_response_id %></td>
        <td><%= answer.creator_id %></td>
        <td><%= answer.response_score %></td>
        <td><%= answer.content %></td>
        <td><%= answer.timestamp %></td>
        <td><%= link_to 'Show', answer %></td>
		
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Respond', new_response_path(:question_id => answer.q_response_id, :response_id => answer.id) %></td>
	
		<td><%= link_to 'Correct', correct_answer_path(answer)%></td>
	
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
